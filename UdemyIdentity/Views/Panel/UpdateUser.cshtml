@model UserUpdateViewModel
@{
    ViewData["Title"] = "UpdateUSer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--ilgili dosyayı gönderebilmek için entype-->
<form asp-action="UpdateUser" asp-controller="Panel" method="post" class="w-75 mx-auto p-3" entype="multipart/form-data">

    <div class="form-group">
        <label asp-for="Name"></label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="SurName"></label>
        <span asp-validation-for="SurName" class="text-danger"></span>
        <input asp-for="SurName" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        <input asp-for="PhoneNumber" />
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <label>Bir önceki resminiz</label>
                <img src="~/img/@Model.PictureUrl" alt="@Model.Name" class="w-100 img-fluied" />
            </div>
            <div class="col-md-8">
                <input type="file" asp-for="@Model.Picture" />
            </div>

        </div>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>
    <button type="submit" class="btn btn-info btn-sm">Kaydet</button>
</form>
